<?xml version="1.0" encoding="UTF-8"?>

<process-definition 
  xmlns="urn:jbpm.org:jpdl-3.2"
  name="communication.workflow">
   <start-state name="start">
      <transition name="Enregistrer courrier" to="task-node-register">
         <action name="action" class="com.hadratech.action.MessageActionHandler">
            <message> Enregistrement courrier first state!</message>
         </action>
      </transition>
		</start-state>
   
   	<task-node name="task-node-register">
		<task name="register" >
			<assignment actor-id="Bureau_ordre_Group"></assignment>
		</task>
		<transition to="task-node-distribute" name="Distribuer Courrier"></transition>
	</task-node>
	<task-node name="task-node-distribute">
		<task name="distribute">
			<assignment actor-id="Secretariat_Group"></assignment>
		</task>
		<transition to="end" name="Fin Distribuer"></transition>
	</task-node>
	<end-state name="end"></end-state>
</process-definition>